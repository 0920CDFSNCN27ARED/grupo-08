<!DOCTYPE html>
<html lang="es" class="catalog_category_view pepito">
    <head>
        <% pageTitle = locals.title !== undefined ? title : 'CategorÃ­a' %> <%-
        include('../partials/head') %>

        <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    </head>

    <body>
        <%- include('../partials/header') %>

        <div id="banner_categoria_id" class="banner_top_categoria">
            <%- include('../components/sliders/slider_full/index', { sliderID: 'slider_home',
            sliderHome_banners: [ { slideID: 1, slideImgURL:
            '/images/catalog/category/banner_categoria.png', slideImgURL_mobile:
            '/images/catalog/category/banner_categoria.png', }, ] }) %>
        </div>

        <div id="toolbar">
            <div id="breadcrumb">
                <ul>
                    <li>
                        <a href="#link">Categoria padre</a>
                    </li>
                    <li class="current">
                        <a href="#link">Categoria hija</a>
                    </li>
                </ul>
            </div>

            <button id="toolbar_filters-open">Filtros</button>

            <div id="gallery_views">
                <p>Ver</p>
                <ul>
                    <li>
                        <span class="change_view" data-cols="2">2</span>
                    </li>
                    <li>
                        <span class="change_view" data-cols="3">3</span>
                    </li>
                    <li class="active">
                        <span class="change_view" data-cols="4">4</span>
                    </li>
                </ul>
            </div>
        </div>

        <main>
            <div id="filters" class="">
                <h4>FILTROS</h4>

                <button id="filters-close">X</button>

                <ul>
                    <li id="atributo_ordenar" class="filter">
                        <p>Ordenar <span>+</span></p>
                        <div class="filter_submenu">
                            <ol>
                                <li></li>
                            </ol>
                        </div>
                    </li>

                    <li id="atributo_tipo_de_producto" class="filter">
                        <p>Tipo de producto <span>-</span></p>
                        <div class="filter_submenu">
                            <ol>
                                <li>Subcat 1</li>
                                <li>Subcat 2</li>
                                <li>Subcat 3</li>
                            </ol>
                        </div>
                    </li>

                    <li id="atributo_colores" class="filter">
                        <p>Colores <span>-</span></p>
                        <div id="" class="filter_submenu">
                            <ol>
                                <li class="filter_colors">
                                    <span id="atributo_colores-blanco"></span>
                                    Blanco
                                </li>
                                <li class="filter_colors active">
                                    <span id="atributo_colores-blanco"></span>
                                    Negro
                                </li>
                                <li class="filter_colors">
                                    <span id="atributo_colores-blanco"></span>
                                    Azul
                                </li>
                            </ol>
                        </div>
                    </li>
                </ul>
            </div>
            <div id="catalog_gallery" class="col-4">
                
                <% for( let i = 0; i < 7; i++ ) { %>
                
                    <%- include('../components/product_card/index', 
                        {
                            product: {
                                id: 1,
                                sku: '11114320070i',
                                name: 'Vestido soulful',
                                price: '13.800',
                                discount: '',
                                colors: ['negro'],
                                sizes: ['xs', 's', 'm', 'l', 'xl'],
                                images: [
                                    '/images/catalog/products/11114320070i/producto00000.jpg',
                                    '/images/catalog/products/11114320070i/producto00001.jpg',
                                    '/images/catalog/products/11114320070i/producto00002.jpg',
                                    '/images/catalog/products/11114320070i/producto00003.jpg',
                                    '/images/catalog/products/11114320070i/producto00004.jpg',
                                    '/images/catalog/products/11114320070i/producto00005.jpg',
                                    '/images/catalog/products/11114320070i/producto00006.jpg',
                                    '/images/catalog/products/11114320070i/producto00007.jpg'
                                ],
                                'product_details': 'Esto es una descripcion'
                                
                            }

                        }
                    ) %>

                <% } %>

                
            </div>
        </main>

        <%- include('../partials/footer') %>

        <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
        <script src="/scripts/main.js"></script>
    </body>
</html>
