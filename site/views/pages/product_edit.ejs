<!DOCTYPE html>
<html lang="es" class="catalog_product_view">

<head>
    <% pageTitle = locals.title !== undefined ? title : 'Ficha de producto' %> <%-
        include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>

    <main>
        <article id="product_create" class="product_details">
            <div class="container products-wrapper">
                <div class="flex">
                    <div class="col-12">
                        <h2 class="products-title">Formulario de edición de productos</h2>
                    </div>
                </div>
                <div class="col-12">
                    <form action="/producto/?_method=PUT" method="POST" enctype="multipart/form-data">
                        <div class="flex product-detail">
                            <div class="col-12 col-md-6">
                                <label for="title" class="form-label">Nombre del producto:</label>
                                <input type="text" id="title" name="title" placeholder="Ej: Zapatillas Reebok"
                                    class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="price" class="form-label">Precio del producto:</label>
                                <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="discount" class="form-label">Descuento:</label>
                                <input type="text" id="discount" name="discount" placeholder="Ej: 15"
                                    class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="images" class="form-label">Imagenes:</label>
                                <input type="file" id="images" name="images" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="in-sale">En oferta</option>
                                    <option value="visited">Últimos agregados</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="colors" class="form-label">Colores:</label>
                                <input type="text" id="colors" name="colors" placeholder="Ej: Azul" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="sizes" class="form-label">Talles:</label>
                                <input type="text" id="sizes" name="sizes" placeholder="Ej: S, M, L" class="form-input">
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label">Descripción:</label>
                                <textarea name="description" id="description" class="form-input"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="buy-now-button">Guardar cambios</button>
                            </div>
                        </div>
                    </form>
                        <div>
                            <form action="/products/?_method=DELETE" method="POST"><button>BORRAR</button></form> <br>
                        </div>
                </div>

            </div>
        </article>

    </main>

    <!-- productos recomendados -->
    <%- include('../components/sliders/featured_slider/index') %>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="/scripts/main.js"></script>
</body>

</html>